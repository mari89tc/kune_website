---
import Button from "../components/Button.astro";
import Footer from "../components/Footer.astro";
import Hero from "../components/Hero.astro";
import Stage from "../components/Stage.astro";
import Main from "../layouts/Main.astro";
import Lineup from "../components/Lineup.astro";
import Buyticket from "../components/Buyticket.astro";

const data = await fetch("https://zdmoxayivfdeyvmosdlh.supabase.co/rest/v1/kune_lineup", {
  method: "GET",
  headers: { apikey: "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6InpkbW94YXlpdmZkZXl2bW9zZGxoIiwicm9sZSI6ImFub24iLCJpYXQiOjE2Nzg5NzMwNDEsImV4cCI6MTk5NDU0OTA0MX0.AEn38sQFVJLclEVL5V1IgByV_qt5qvKs0r9GFE8dJ7Y" },
}).then((res) => res.json());

//console.log(data);
/*
{
    id: 88,
    created_at: '2023-03-17T12:22:38.08356+00:00',
    time: '22:00:00',
    name: 'bobo live',
    day: '2022-07-23',
    scene: 'amphi stage',
    number: '3'
  }

*/
function sortActs(a, b) {
  return a.number - b.number;
}
data.sort(sortActs);
const friday = data.filter((act) => act.day === "2022-07-22");
const fridaySpace = friday.filter((act) => act.scene === "space stage");
const fridayVessel = friday.filter((act) => act.scene === "vessel stage");
const fridayAstral = friday.filter((act) => act.scene === "astral stage");
const fridayBeach = friday.filter((act) => act.scene === "beach stage");
const fridayAmphi = friday.filter((act) => act.scene === "amphi stage");

console.log(fridaySpace);
---

<Main>
  <Hero slot="header-slot">
    <img src="lineupforside.webp" alt="lineup picture" />
    <h2>LINEUP</h2>
  </Hero>
  <article>
    <Buyticket />
    <div class="grid_1-1-1-1">
      <Button text="WEDNESDAY" />
      <Button text="THURSDAY" />
      <Button text="FRIDAY" />
      <Button text="SATURDAY" />
    </div>
    <div class="headh3">
      <h3>FRIDAY - JULY 22</h3>
    </div>
    <section class="grid_1-1-1">
      <Stage name="Space Stage" host="VJ:PM" acts={fridaySpace} />
      <Stage name="Vessel Stage" host="VJ:ALEX ROSADO" acts={fridayVessel} />
      <Stage name="Astral Stage" host="VJ:SCENTIC ROUTE" acts={fridayAstral} />
      <Stage name="Beach Stage" acts={fridayBeach} />
      <Stage name="Amphi Stage" acts={fridayAmphi} />
    </section>
    <Lineup />
    <section class="map">
      <h3>GET TO KNOW KUNE FESTIVAL</h3>
      <img src="kort.svg" alt="map over festival" />
    </section>
    <Footer />
  </article>
</Main>
<style>
  article {
    padding: 20px;
    background: rgb(197, 152, 222);
    background: linear-gradient(180deg, rgba(197, 152, 222, 1) 0%, rgba(159, 217, 102, 1) 100%);
  }
  .headh3 {
    display: grid;
  }
  .headh3 h3 {
    justify-self: center;
    align-self: center;
    margin-top: 100px;
    margin-bottom: 80px;
  }
  .grid_1-1-1 {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 30px;
  }

  .grid_1-1-1-1 {
    display: flex;
    justify-content: space-evenly;
  }
  .map {
    display: grid;
    margin-top: 150px;
  }
  .map img {
    justify-self: center;
    align-self: center;
  }
  .map h3 {
    justify-self: center;
    align-self: center;
  }
  .map img {
    width: 40%;
  }
  @media (max-width: 600px) {
    .map img {
      width: 80%;
    }
    .grid_1-1-1 {
      display: grid;
      grid-template-columns: 1fr;
      gap: 30px;
    }
  }
</style>
