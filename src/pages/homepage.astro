---
import Hero from "../components/Hero.astro";
import Main from "../layouts/Main.astro";
---

<Main>
  <Hero>
    <img src="homepage.webp" alt="homepage picture" />
    <img src="logo-round-white.png" alt="logo" />
  </Hero>
  <article>
    <section class="grid_1-1">
      <img src="forside4.webp" alt="picture from KUNE" />
      <div>
        <h3>19 - 23 JULY KUNE FESTIVAL</h3>
        <p>
          A 5-day electronic music festival that takes place on an island 30 minutes away from Copenhagen. A one-of-its-kind celebration of the Scandinavian underground culture. A playground with five stages, two art galleries, and multiple art
          installations. An intimate, holistic experience with access to a camping ground, food area, dipping spot, and unique sunsets. A true hidden gem.
        </p>
      </div>
    </section>
    <section class="grid_1-1-1">
      <div>
        <img src="forside1.webp" alt="picture from workshop" />
        <h4>Do you want to be volunteer at KUNE Festival?</h4>
      </div>
      <div>
        <img src="forside3.webp" alt="picture from festival" />
        <h4>Whoâ€™s playing at KUNE Festival 2023?</h4>
      </div>
      <div>
        <img src="forside2.webp" alt="picture of art" />
        <h4>Read more about KUNE Festival here!</h4>
      </div>
    </section>
    <section>
      <h3>GET TO KNOW KUNE FESTIVAL</h3>
      <img src="" alt="map over festival" />
    </section>
  </article>

  <!-- css her -->
  <style>
    article {
      background: rgb(197, 152, 222);
      background: linear-gradient(180deg, rgba(197, 152, 222, 1) 0%, rgba(224, 89, 55, 1) 50%, rgba(159, 217, 102, 1) 100%);
      min-height: 100%;
    }
    .grid_1-1 {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 20px;
    }
    .grid_1-1-1 {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
      gap: 30px;
    }
    .grid_1-1-1 img {
      opacity: 50%;
    }
    .grid_1-1-1 img:hover {
      opacity: 100%;
      transform: scale(1.1);
    }
    .grid_1-1-1 h4:hover {
      transform: scale(1.1);
    }
    section {
      margin-bottom: 110px;
      padding: 30px;
    }
    section h3 h4 p {
      color: white;
    }
    section :last-child h3 {
      /* justify-self: center; */
      align-self: center;
    }
  </style>
</Main>
