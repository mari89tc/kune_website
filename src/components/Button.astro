---
const text = Astro.props.text;
---

<button>
  <p>{text}</p>
</button>

<style>
  button {
    background-color: #353639;
    text-decoration: none;
    outline: none;
    margin-top: 80px;
    width: 250px;
    border: none;
  }
  button p {
    font-family: "Montserrat", sans-serif;
    font-style: normal;
    font-weight: 500;
    font-size: 16px;
    line-height: 32px;
    color: #ffffff;
  }
  button:hover {
    background-color: #ffffff;
    text-decoration: none;
    outline: none;
    margin-top: 80px;
    width: 250px;
    border: none;
  }
  button:hover p {
    font-family: "Montserrat", sans-serif;
    font-style: normal;
    font-weight: 500;
    font-size: 16px;
    line-height: 32px;
    color: #353639;
  }
  button:active {
    background-color: #ffffff;
    text-decoration: none;
    outline: none;
    margin-top: 80px;
    width: 250px;
    border: none;
  }
  button:active p {
    font-family: "Montserrat", sans-serif;
    font-style: normal;
    font-weight: 500;
    font-size: 16px;
    line-height: 32px;
    color: #353639;
  }
</style>
