---
const { text, href = "/" } = Astro.props;
---

<a href={href}>
  <p>{text}</p>
</a>

<style>
  a {
    background-color: #353639;
    text-decoration: none;
    outline: none;
    margin-top: 80px;
    width: 250px;
    border: none;
  }
  a p {
    font-family: "Montserrat", sans-serif;
    font-style: normal;
    font-weight: 500;
    font-size: 16px;
    line-height: 32px;
    color: #ffffff;
    text-align: center;
  }
  a:hover {
    background-color: #ffffff;
    text-decoration: none;
    outline: none;
    margin-top: 80px;
    width: 250px;
    border: none;
  }
  a:hover p {
    font-family: "Montserrat", sans-serif;
    font-style: normal;
    font-weight: 500;
    font-size: 16px;
    line-height: 32px;
    color: #353639;
  }
  a:active {
    background-color: #ffffff;
    text-decoration: none;
    outline: none;
    margin-top: 80px;
    width: 250px;
    border: none;
  }
  a:active p {
    font-family: "Montserrat", sans-serif;
    font-style: normal;
    font-weight: 500;
    font-size: 16px;
    line-height: 32px;
    color: #353639;
  }
</style>
